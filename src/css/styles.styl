    width 100%
    display flex
    justify-content center
    align-items center
    flex-direction column
    color c_black
    height 100vh
    height calc(var(--vh, 1vh) * 100)
    .header_wrapper
        border 16px solid c_dark
        width 100%
        height 100%
        box-sizing border-box
        display flex
        justify-content center
        align-items center
        flex-direction column
        h1
            margin 0 
            font-size 120px
            text-transform uppercase
            font-weight 900
            text-align center
        p
            line-height 50px
            font-size 20px
        .word
            transition 200ms ease
            cursor default
            padding 0 10px
            margin 10px 0
            display inline-block
            &:hover
                background c_accent
                transition 200ms ease
            &:nth-last-of-type(1)
                background c_accent
                &:hover
                    background c_black
                    color c_dark
            a
                font-size inherit
                margin 0
                color inherit
                text-decoration none

            
footer
    background c_dark
    display flex
    justify-content center
    align-items center
    padding 40px 0
    font-size 12px
    font-weight 800
    text-transform uppercase

#techs
    display flex
    justify-content center
    align-items center
    flex-direction row
    color c_black
    margin 100px 30px
    padding 20px
    div
        width 45%
        padding 0 2% 0 6%
        display flex
        justify-content center
        align-items center
        &:nth-of-type(2)
            width 55%
        p
            font-size 20px
            line-height 300%
            font-weight 700
            letter-spacing 0.02em
    .icons
        display flex
        flex-wrap wrap
        justify-content center
        align-items center
        .icon
            flex 1 0 calc(33% - 28px)
            font-size 120px
            padding 0
            box-sizing border-box
            margin 14px

#contact
    display flex
    justify-content center
    align-items center
    flex-direction column
    background c_black
    color c_white
    padding 100px
    form
        display flex
        flex-wrap wrap
        justify-content center
        align-items center
        .input-group
            display flex
            justify-content center
            align-items flex-start
            flex-direction column
            flex 1 0 calc(50% - 20px)
            &:nth-of-type(1)
                margin 10px 10px 10px 0
            &:nth-of-type(2)
                margin-left 10px 0 10px 10px
            label
                margin-left 20px
                font-weight 500
            input
                width 100%
                background c_white
                outline none
                border 4px solid c_white
                padding 10px 16px
                box-sizing border-box
                transition 200ms ease
                border-radius 20px
                font inherit
                &:active, &:focus
                    border-color c_accent
                    transition 200ms ease
            &.wide
                flex 1 0 100%
                span
                    display flex
                    justify-content center
                    align-items center
                    width 100%
            textarea
                width 100%
                background c_white
                outline none
                border 4px solid c_white
                padding 10px
                box-sizing border-box
                transition 200ms ease
                border-radius 20px
                margin 10px 0
                font inherit
                &:active, &:focus
                    border-color c_accent
                    transition 200ms ease
            button
                display inline
                border none
                background none
                font inherit
                color inherit
                border 2px solid c_accent
                padding 10px 20px
                border-radius 20px
                cursor pointer
                transition 200ms ease
                margin-top 20px
                &:hover, &:active, &:focus
                    background c_accent
                    color c_black
                    transition 200ms ease


@media screen and (max-width: 1200px)
    #techs
        margin 40px 20px
        flex-direction column
        .icons
            margin-top 40px
            .icon
                font-size 110px
                flex 1 0 calc(20% - 28px)
        div
            width 100%
            &:nth-of-type(2)
                width 100%
            p
                line-height 240%

@media screen and (max-width: 576px)
    #contact
        padding 40px
    header
        .header_wrapper
            h1
                font-size 80px
