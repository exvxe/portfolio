@import url('https://fonts.googleapis.com/css?family=Montserrat:100,200,300,400,500,600,700,800,900')

c_white =#F8F7FF
c_black =#1b1f27
c_accent = #41EAD4
c_dark = #FBFF12

*::selection
    background c_accent

body
    font-family 'Montserrat', sans-serif
    margin 0
    padding 0
    color c_black
    background c_white

.loader
    position fixed
    z-index 100
    color c_black
    background c_dark
    width 100%
    height 100%
    display flex
    justify-content center
    align-items center
    animation loader 1s forwards
    animation-delay 1s
    text-transform uppercase
    h1
        font-size 240px
        animation loader_text 600ms forwards

@keyframes loader {
    0% {
        opacity 1
    }
    20% {
        opacity 1
    }
    100% {
        opacity 0
        z-index -10
    }
}

@keyframes loader_text {
    0% {
        letter-spacing 200px
    }
    100% {
        letter-spacing normal
    }
}

header
    background-color c_white
    background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 64 64' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M8 16c4.418 0 8-3.582 8-8s-3.582-8-8-8-8 3.582-8 8 3.582 8 8 8zm0-2c3.314 0 6-2.686 6-6s-2.686-6-6-6-6 2.686-6 6 2.686 6 6 6zm33.414-6l5.95-5.95L45.95.636 40 6.586 34.05.636 32.636 2.05 38.586 8l-5.95 5.95 1.414 1.414L40 9.414l5.95 5.95 1.414-1.414L41.414 8zM40 48c4.418 0 8-3.582 8-8s-3.582-8-8-8-8 3.582-8 8 3.582 8 8 8zm0-2c3.314 0 6-2.686 6-6s-2.686-6-6-6-6 2.686-6 6 2.686 6 6 6zM9.414 40l5.95-5.95-1.414-1.414L8 38.586l-5.95-5.95L.636 34.05 6.586 40l-5.95 5.95 1.414 1.414L8 41.414l5.95 5.95 1.414-1.414L9.414 40z' fill='%231b1f27' fill-opacity='0.1' fill-rule='evenodd'/%3E%3C/svg%3E");
    width 100%
    height 100vh
    display flex
    justify-content center
    align-items center
    flex-direction column
    color c_black
    .header_wrapper
        width 1000px
        text-align center
        h1
            margin 0 
            font-size 100px
            text-transform uppercase
            font-weight 900
            &:nth-of-type(1)
                margin-bottom 40px
        p
            line-height 50px
            font-size 20px
        a
            font-size 30px
            color inherit
            text-decoration none
            margin-top 50px
            display inline-block
            position relative
            &:after
                display block
                content ''
                position absolute
                background c_accent
                width 0
                height 2px
                top calc(50% + 2px)
                left -5px
                transition width 200ms ease-in-out
            &:hover
                &:after
                    width calc(100% + 10px)
                    transition width 200ms ease-in-out



footer
    background c_dark
    display flex
    justify-content center
    align-items center
    padding 40px 0
    font-size 12px
    font-weight 300
    text-transform uppercase

#techs
    display flex
    justify-content center
    align-items center
    flex-direction row
    color c_black
    margin 100px 30px
    padding 20px
    div
        width 50%
        padding 0 40px 0 120px
        display flex
        justify-content center
        align-items center
        p
            font-size 20px
            line-height 300%
            font-weight 700
            letter-spacing 0.02em