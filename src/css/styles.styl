@import url('https://fonts.googleapis.com/css?family=Montserrat:100,200,300,400,500,600,700,800,900')

c_white =#F8F7FF
c_black =#1b1f27
c_accent = #41EAD4
c_dark = #FBFF12

*::selection
    background c_accent

body
    font-family 'Montserrat', sans-serif
    margin 0
    padding 0
    color c_black
    background c_white

.loader
    position fixed
    z-index 100
    color c_black
    background c_dark
    width 100%
    height 100%
    display flex
    justify-content center
    align-items center
    animation loader 500ms forwards
    animation-delay 1s
    text-transform uppercase
    .wrapper
        width 200px
        height 50px
        position relative
        display flex
        justify-content center
        align-items center
        flex-wrap wrap
        span
            flex: 1 0 33%;
            display flex
            justify-content center
            align-items center
        span:after
            content ''
            background c_black
            width 0
            height 0
            border-radius 50%
            position absolute
        span:nth-of-type(1):after
                animation loader_circles1 1s 4
                animation-delay -0.30s
        span:nth-of-type(2):after
                animation loader_circles2 1s 4  
                animation-delay -0.15s
        span:nth-of-type(3):after
                animation loader_circles3 1s 4

@keyframes loader {
    0% {
        top 0
    }
    20% {
        top 0
    }
    100% {
        top -100%
    }
}

@keyframes loader_circles1 {
    0% {
        width 0
        height 0
    }
    50% {
        width 30px
        height 30px
    }
    100% {
        width 0
        height 0
    }
}

@keyframes loader_circles2 {
    0% {
        width 0
        height 0
    }
    50% {
        width 30px
        height 30px
    }
    100% {
        width 0
        height 0
    }
}

@keyframes loader_circles3 {
    0% {
        width 0
        height 0
    }
    50% {
        width 30px
        height 30px
    }
    100% {
        width 0
        height 0
    }
}



